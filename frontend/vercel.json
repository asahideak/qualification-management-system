{
  "name": "qualification-management-frontend",
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm ci",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "env": {
    "VITE_API_URL": "https://qualification-management-backend.vercel.app"
  },
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  }
}